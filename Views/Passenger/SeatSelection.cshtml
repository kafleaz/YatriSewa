@{
    ViewData["Title"] = "Bus Details";
    Layout = "~/Views/Shared/_NoFooterLayout.cshtml";
}

<!-- Bus Seat Select -->
<div class="seat-select padding-bt">
    <div class="osahan-header-nav shadow-sm p-3 d-flex align-items-center bg-darkblue">
        <h5 class="font-weight-normal mb-0 text-white">
            <a class="text-darkblue mr-3" asp-controller="Passenger" asp-action="BusDetails"><i class="icofont-rounded-left"></i></a>
            Bus Seat Select
        </h5>
        <div class="ml-auto d-flex align-items-center">
            <a class="toggle osahan-toggle h4 m-0 text-white ml-auto" href="#"><i class="icofont-navigation-menu"></i></a>
        </div>
    </div>
    <!-- Ticket -->
    <div class="ticket p-3">
        <h6 class="mb-1 font-weight-bold text-dark">Travellers ISO 9002- 2009 Certified</h6>
        <div class="start-rating f-10 mb-3">
            <i class="icofont-star text-green"></i>
            <i class="icofont-star text-green"></i>
            <i class="icofont-star text-green"></i>
            <i class="icofont-star text-green"></i>
            <i class="icofont-star text-muted"></i>
            <span class="text-dark">4.0</span>
        </div>
        <div class="bg-white rounded-1 shadow-sm p-3 mb-3 w-100">
            <div class="row mx-0 mb-3">
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">Wifi</small>
                    <p class="small mb-0 l-hght-14"> Access in the bus</p>
                </div>
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">AC</small>
                    <p class="small mb-0 l-hght-14"> Ac is available</p>
                </div>
            </div>
            <div class="row mx-0 mb-3">
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">Dinner / Lunch</small>
                    <p class="small mb-0 l-hght-14"> Yes</p>
                </div>
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">Safety Features</small>
                    <p class="small mb-0 l-hght-14"> Sanitized, Masks</p>
                </div>
            </div>
            <div class="row mx-0">
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">Essentials</small>
                    <p class="small mb-0 l-hght-14"> Pillow, Water</p>
                </div>
                <div class="col-6 p-0">
                    <small class="text-muted mb-1 f-10 pr-1">Snacks</small>
                    <p class="small mb-0 l-hght-14">Juice / shake </p>
                </div>
            </div>
        </div>
        <!-- Select Seat -->
        <div class="select-seat bg-white mx-0 px-3 pt-3 pb-1 mb-3 rounded-1 shadow-sm">
            <div class="pl-0">
                <div class="d-flex">
                    <div class="sold text-center">
                        <img src="~/img/sold-seat.png" class="img-fluid mb-1">
                        <p class="small f-10">Sold Out</p>
                    </div>
                    <div class="sold text-center mx-3">
                        <img src="~/img/available-seat.png" class="img-fluid mb-1">
                        <p class="small f-10">Available</p>
                    </div>
                    <div class="sold text-center">
                        <img src="~/img/selected-seat.png" class="img-fluid mb-1">
                        <p class="small f-10">Selected</p>
                    </div>
                </div>
                <div class="select-seat-container bg-white p-3 rounded shadow-sm">
                    <!-- Seat Configuration Selector -->
                    <div class="seat-config mb-3">
                        <label for="seatConfig" class="form-label">Select Seat Configuration:</label>
                        <select id="seatConfig" class="form-control">
                            <option value="2/2">2/2 (4 seats per row)</option>
                            <option value="1/2">1/2 (3 seats per row)</option>
                        </select>
                    </div>

                    <!-- Dynamic Seat Layout -->
                    <div id="seatLayout" class="seat-layout">
                        <!-- Seats will be dynamically inserted here -->
                    </div>
                </div>

                <script>
                    document.getElementById("seatConfig").addEventListener("change", function () {
                        const layout = this.value;
                        const seatLayout = document.getElementById("seatLayout");
                        seatLayout.innerHTML = ""; // Clear existing layout

                        const totalSeats = 21;
                        const seatsPerRow = layout === "2/2" ? 4 : 3;
                        const totalRows = Math.ceil(totalSeats / seatsPerRow);

                        let seatCounter = 1;

                        for (let i = 0; i < totalRows; i++) {
                            const row = document.createElement("div");
                            row.className = "row mb-2 align-items-center";

                            // Left side seats
                            const leftCol = document.createElement("div");
                            leftCol.className = "col-auto d-flex";
                            for (let j = 0; j < (layout === "2/2" ? 2 : 1); j++) {
                                if (seatCounter <= totalSeats) {
                                    leftCol.appendChild(createSeatButton(seatCounter++));
                                }
                            }
                            row.appendChild(leftCol);

                            // Aisle
                            const aisle = document.createElement("div");
                            aisle.className = "col";
                            row.appendChild(aisle);

                            // Right side seats
                            const rightCol = document.createElement("div");
                            rightCol.className = "col-auto d-flex";
                            for (let j = 0; j < (layout === "2/2" ? 2 : 2); j++) {
                                if (seatCounter <= totalSeats) {
                                    rightCol.appendChild(createSeatButton(seatCounter++));
                                }
                            }
                            row.appendChild(rightCol);

                            seatLayout.appendChild(row);
                        }
                    });

                    function createSeatButton(seatNumber) {
                        const label = document.createElement("label");
                        label.className = "btn check-seat btn-success small btn-sm rounded mr-2";
                        label.innerHTML = `
                                <input type="checkbox" name="seat${seatNumber}" autocomplete="off">
                                ${seatLabel(seatNumber)}
                            `;
                        return label;
                    }

                    function seatLabel(seatNumber) {
                        const row = Math.floor((seatNumber - 1) / 4) + 65; // ASCII A = 65
                        const col = ((seatNumber - 1) % 4) + 1;
                        return String.fromCharCode(row) + col;
                    }

                    // Trigger default layout rendering
                    document.getElementById("seatConfig").dispatchEvent(new Event("change"));
                </script>

            </div>
        </div>
        <div class="list_item d-flex col-12 m-0 p-3 bg-white shadow-sm rounded-1 shadow-sm">
            <div class="d-flex mb-auto">
                <img src="~/img/qr-code.png" class="img-fluid osahan-qr">
            </div>
            <div class="d-flex w-100">
                <div class="bus_details w-100 pl-3">
                    <p class="mb-2 l-hght-18 font-weight-bold">More info.</p>
                    <div class="l-hght-10 d-flex align-items-center my-2">
                        <small class="text-muted mb-0 pr-1">Passenger</small>
                        <p class="small mb-0 ml-auto l-hght-14"> Joan Rase</p>
                    </div>
                    <div class="l-hght-10 d-flex align-items-center my-2">
                        <small class="text-muted mb-0 pr-1">Ticket Number</small>
                        <p class="small mb-0 ml-auto l-hght-14"> 1313</p>
                    </div>
                    <div class="l-hght-10 d-flex align-items-center my-2">
                        <small class="text-muted mb-0 pr-1">PNR Number</small>
                        <p class="small mb-0 ml-auto l-hght-14"> 56276-32324</p>
                    </div>
                    <div class="l-hght-10 d-flex align-items-center mt-3">
                        <p class="mb-0 pr-1 font-weight-bold text">Amount Paid</p>
                        <p class="mb-0 ml-auto l-hght-14 text-darkblue font-weight-bold">$700</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Continue Booking -->
<div class="fixed-bottom view-seatbt p-3">
    <a href="payment.html" class="btn btn-darkblue btn-block d-flex align-items-center osahanbus-btn rounded-1">
        <span class="text-left l-hght-14">
            TOTAL $700<br>
            <small class="f-10 text-white-50">Seats Selected : 3</small>
        </span>
        <span class="font-weight-bold ml-auto">NEXT</span>
    </a>
</div>