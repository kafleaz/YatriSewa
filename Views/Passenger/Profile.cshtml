@{
    ViewData["Title"] = "Profile Page";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

<div class="osahan-profile">
    <!-- Header -->
    <div class="osahan-header-nav shadow-sm bg-darkblue p-3 d-flex align-items-center">
        <h5 class="font-weight-normal mb-0 text-white">
            <a class="text-darkblue mr-3" asp-controller="Passenger" asp-action="HomePage">
                <i class="icofont-rounded-left"></i>
            </a>
            My Profile
        </h5>
        <div class="ml-auto d-flex align-items-center">
            <a class="toggle osahan-toggle h4 m-0 text-white ml-auto" href="#">
                <i class="icofont-navigation-menu"></i>
            </a>
        </div>
    </div>

    <!-- Profile -->
    <div class="px-3 pt-3 pb-5">
        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-center rounded-2 mb-4">
                <div class="form-profile w-100">
                    <!-- Profile Picture -->
                    <div class="text-center mb-3 position-relative">
                        <div class="position-absolute edit-bt">
                            <label for="upload-photo" class="mb-0">
                                <span class="icofont-pencil-alt-5 text-white"></span>
                            </label>
                            <input type="file" name="ProfilePic" id="upload-photo" class="d-none" disabled />
                        </div>
                        <img src="@Model.ProfilePicPath" class="rounded-pill" id="profileImage" />
                    </div>

                    <!-- Name -->
                    <div class="form-group">
                        <label class="text-muted f-10 mb-1">User Name</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" disabled />
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label class="text-muted f-10 mb-1">Your Email</label>
                        <input type="email" class="form-control" name="Email" value="@Model.Email" disabled />
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label class="text-muted f-10 mb-1">Mobile Number</label>
                        <input type="text" class="form-control" name="PhoneNo" value="@Model.PhoneNo" disabled />
                    </div>

                    <!-- Update Button -->
                    <div class="mb-5">
                        <button type="submit" class="btn btn-darkblue btn-block osahanbus-btn rounded-1" id="updateBtn" disabled>
                            UPDATE PROFILE
                        </button>
                    </div>

                    <!-- Edit Icon -->
                    <div class="text-right">
                        <a href="javascript:void(0);" class="text-darkblue" id="editProfile">
                            <i class="icofont-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('editProfile').addEventListener('click', function () {
            // Enable form fields
            document.querySelectorAll('.form-control, #upload-photo, #updateBtn').forEach(field => {
                field.disabled = false;
            });
        });
    </script>
}
