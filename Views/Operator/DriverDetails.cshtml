@model YatriSewa.Models.BusDriver

@{
    ViewData["Title"] = "Driver Details";
    Layout = "~/Views/Shared/_OperatorLayout.cshtml";
}

<div>
    <h4 class="text-green">Driver Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DriverName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LicenseNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePhotoPath)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LicensePhotoPath))
            {
                <img src="@Url.Content(Model.LicensePhotoPath)" alt="License Photo" class="img-fluid" style="max-width: 400px; max-height: 300px;" />
            }
            else
            {
                <p>No photo available</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsAvailable)
            {
                <span>Available</span>
            }
            else
            {
                <span>Driver is assigned to <span class="text-danger"> @Model.BusCompany?.CompanyName</span></span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.IsAvailable)
    {
         <form asp-controller="Operator" asp-action="AddDriver" method="post" style="display:inline;">
            <input type="hidden" name="driverId" value="@Model.DriverId" />
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
        @* <a asp-controller="Operator" asp-action="AddDriver" class="btn btn-primary">Add </a> *@
    }
    else
    {
        <button class="btn btn-secondary" disabled>Add</button>
    }
    <a asp-action="ListDrivers" class="btn btn-outline-secondary">Back to List</a>
</div>
