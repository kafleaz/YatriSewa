@model List<YatriSewa.Models.User>

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center my-4">User Management</h1>

<div class="container">
    <div class="card shadow-lg">
        
        <div class="card-body">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone No</th>
                        <th>Auth Method</th>
                        <th>Verified</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Bus Company</th>
                        <th>Driver ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNo</td>
                            <td>@user.Auth_Method</td>
                            <td>
                                <span class="badge @(user.IsVerified ? "bg-success" : "bg-danger")">
                                    @(user.IsVerified ? "Verified" : "Not Verified")
                                </span>
                            </td>
                            <td>
                                <span class="badge @(user.Role == YatriSewa.Models.UserRole.Admin ? "bg-warning text-dark" : "bg-info")">
                                    @user.Role
                                </span>
                            </td>
                            <td>@user.Created_At.ToString("yyyy-MM-dd")</td>
                            <td>@user.Updated_At.ToString("yyyy-MM-dd")</td>
                            <td>@(user.BusCompany?.CompanyName ?? "N/A")</td>
                            <td>@user.DriverId</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


