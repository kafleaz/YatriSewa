@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "TodayJourneys";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Today Journeys</h3>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Today's Journeys</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">No journeys scheduled for today.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Bus Name</th>
                            <th>Start Location</th>
                            <th>Stop Locations</th>
                            <th>End Location</th>
                            <th>Bus ID</th>
                            <th>Departure Time</th>
                            <th>Arrival Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var journey in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@journey.BusName</td>
                                <td>@journey.StartLocation</td>
                                <td>@journey.StopLocations</td>
                                <td>@journey.EndLocation</td>
                                <td>@journey.BusId</td>
                                <td>@journey.DepartureTime.ToString("hh:mm tt")</td>
                                <td>@journey.ArrivalTime.ToString("hh:mm tt")</td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>


