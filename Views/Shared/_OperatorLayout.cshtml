<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - YatriSewa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YatriSewa.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar hidden" id="sidebar">
        <div class="logo">
            <img src="~/img/YatriLogo.png" alt="Logo">
        </div>

        <!-- Scrollable Links -->
        <nav class="nav-links">
            <a asp-controller="Operator" asp-action="OperatorDashboard" class="nav-link">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a asp-controller="Operator" asp-action="ListBus" class="nav-link">
                <i class="fas fa-bus"></i> Bus
            </a>
            <a asp-controller="Operator" asp-action="ListRoute" class="nav-link">
                <i class="fas fa-route"></i> Route
            </a>
            <a asp-controller="Operator" asp-action="ListService" class="nav-link">
                <i class="fas fa-route"></i> Service
            </a>
            <a asp-controller="Operator" asp-action="ListDrivers" class="nav-link">
                <i class="fas fa-user-tie"></i> Drivers
            </a>
            <a asp-controller="Schedules" asp-action="Index" class="nav-link">
                <i class="fas fa-calendar-alt"></i> Schedule
            </a>

            <a asp-controller="Operator" asp-action="ScheduledBuses" class="nav-link">
                    <i class="fas fa-bus"></i> Scheduled Buses
                </a>
           

            
            <a href="#" class="nav-link">
                <i class="fas fa-hourglass-half"></i> Pending Payment
            </a>
            <a href="#" class="nav-link">
                <i class="fas fa-check-circle"></i> Successful Payment
            </a>
            <a href="#" class="nav-link">
                <i class="fas fa-undo-alt"></i> Refunded Payment
            </a>
            <a href="#" class="nav-link">
                <i class="fas fa-history"></i> Transaction History
            </a>
        </nav>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">

            <!-- Menu icon for mobile view -->
            <button class="btn btn-primary d-lg-none" id="menu-toggle">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Search icon for all views -->
            <ul class="navbar-nav ms-auto mb-lg-0 d-flex align-items-center">
                <!-- Search icon -->
                <li class="nav-item">
                    <button class="btn nav-link" id="search-toggle">
                        <i class="fas fa-search"></i>
                    </button>
                    <div id="search-box-mobile" class="d-none">
                        <input type="text" class="form-control" placeholder="Search here..." aria-label="Search">
                    </div>
                </li>

                <!-- Globe icon -->
                <li class="nav-item nav-fa-globe">
                    <a class="nav-link" href="#">
                        <i class="fas fa-globe"></i>
                    </a>
                </li>

                <!-- Notification Icon with Badge -->
                <li class="nav-item">
                    <a class="nav-link" href="#" id="notificationDropdown" role="button">
                        <i class="fas fa-bell"></i>
                        <span class="badge bg-danger">9+</span>
                    </a>
                    <!-- Dropdown Menu -->
                    <div id="notificationMenu" class="notificationMenu dropdown-menu dropdown-menu-end" style="display: none;">
                        <div class="dropdown-header">
                            <strong>Notification</strong>
                            <p class="text-muted small">You have 47 unread notifications</p>
                        </div>
                        <hr class="dropdown-divider">

                        <!-- Notification Items -->
                        <div class="notification-item">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <i class="far fa-clock me-2"></i>
                                    <div>
                                        <strong>New member registered</strong>
                                        <div class="small text-muted">1 hour ago</div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="notification-item">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <i class="far fa-clock me-2"></i>
                                    <div>
                                        <strong>New member registered</strong>
                                        <div class="small text-muted">4 hours ago</div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <!-- More items can be added -->

                        <hr class="dropdown-divider">

                        <!-- View all notifications link -->
                        <div class="text-center">
                            <a href="#" class="dropdown-item text-primary">View all notifications</a>
                        </div>
                    </div>
                </li>

                <!-- User profile -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/img/driver.png" alt="Profile" class="rounded-circle" width="15">
                        <span class="ms-2">operator</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li>
                            <form asp-controller="Operator" asp-action="Profile" method="post" class="d-inline">
                                <button type="submit" class="profileicon dropdown-item far fa-user-circle ">Profile</button>
                            </form>
                            
                        <li>
                            <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="profileicon dropdown-item fas fa-sign-out-alt">Logout</button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content" id="main-content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI library -->
    
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- jQuery Timepicker Addon -->
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
