@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Journey List";
    Layout = "_DriverLayout";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Journey List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div class=" padding-bt">
    <div class="osahan-header-nav shadow-sm bg-darkblue p-3 d-flex align-items-center">
        <h5 class="font-weight-normal mb-0 text-white">
            <a class="text-darkblue mr-3" onclick="goBack()"><i class="icofont-rounded-left"></i></a>
            Journey List
        </h5>
        <div class="ml-auto d-flex align-items-center">
            <a href="#" class="text-white mr-3">Clear</a>
            <a class="toggle osahan-toggle h4 m-0 text-white ml-auto" href="#"><i class="icofont-navigation-menu"></i></a>
        </div>
    </div>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Journey List</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">No journeys found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                        <tr>
                            
                            <th></th>
                            <th>Bus Name</th>
                            <th>Start Location</th>
                            <th>Stop Locations</th>
                            <th>End Location</th>
                            <th>Journey Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1; // Initialize a counter
                        }
                        @foreach (var journey in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@journey.BusName</td>
                                <td>@journey.StartLocation</td>
                                <td>@journey.StopLocations</td>
                                <td>@journey.EndLocation</td>
                                <td>@journey.JourneyDate</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            @* <a asp-action="StartJourney" asp-controller="Driver" method="post">
                Start Journey</a> *@
        }
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</div>
