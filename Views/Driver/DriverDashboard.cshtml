@{
    Layout = "_DriverLayout";
}

@{
    ViewData["Title"] = "Driver Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Driver Dashboard</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow-sm mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Completed Journeys</h5>
                    <p class="card-text display-4 fw-bold">45</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success shadow-sm mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Earnings</h5>
                    <p class="card-text display-4 fw-bold">$1200</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning shadow-sm mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Ratings</h5>
                    <p class="card-text display-4 fw-bold">4.8</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="mb-3">Recent Activity</h4>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Journey</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>City A to City B</td>
                    <td>Jan 15, 2025</td>
                    <td><span class="badge bg-success">Completed</span></td>
                </tr>
                <tr>
                    <td>City C to City D</td>
                    <td>Jan 12, 2025</td>
                    <td><span class="badge bg-success">Completed</span></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-5">
        <h4 class="mb-4">Passenger List</h4>

        @* <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Search Passenger">
            <button class="btn btn-primary" type="button">Search</button>
        </div> *@

        <table class="table table-bordered table-hover">
            <thead class="table-primary text-center">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var passenger in Model.Passengers)
                {
                    <tr>
                        <td>@passenger.Name</td>
                        <td>@passenger.Email</td>
                        <td>@passenger.PhoneNo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Bootstrap from a CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
