@{
    Layout = "_DriverLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Journeys</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Upcoming Journeys</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Journey Date</th>
                        <th>Bus Name</th>
                        <th>Route</th>
                        <th>Departure Time</th>
                        <th>Arrival Time</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Row -->
                    <tr>
                        <td>1</td>
                        <td>2024-11-25</td>
                        <td>City Express</td>
                        <td>Kathmandu - Pokhara</td>
                        <td>7:00 AM</td>
                        <td>11:00 AM</td>
                     
                    </tr>

                    <!-- Repeat Rows for Each Journey -->
                    <tr>
                        <td>2</td>
                        <td>2024-11-26</td>
                        <td>Mountain Ride</td>
                        <td>Patan - Chitwan</td>
                        <td>8:00 AM</td>
                        <td>1:00 PM</td>
                  
                    </tr>

                </tbody>
            </table>
            <div class="text-center mt-4">
                <a asp-controller="Driver" asp-action="DriverDashboard" class="btn btn-primary">Back to Dashboard</a>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
