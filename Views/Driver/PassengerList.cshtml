@{
    ViewData["Title"] = "Passenger List";
}
@model List<YatriSewa.Models.Passenger>

<div class="container mt-5">
    <h2 class="text-center mb-4">Passenger List</h2>

    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="Search Passenger">
        <button class="btn btn-primary" type="button">Search</button>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-primary text-center">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int count = 1;
                foreach (var passenger in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@passenger.Name</td>
                        <td>@passenger.PhoneNumber</td>
                        <td>@passenger.BoardingPoint</td>
                        <td>@passenger.DroppingPoint</td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No passengers found for this bus.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

