@{
    ViewData["Title"] = "Passenger List";
    Layout = "~/Views/Shared/_DriverLayout.cshtml";
}
@model IEnumerable<dynamic>
<div class="container mt-5">
    <h2 class="text-center mb-4">Passenger List</h2>

    <div class="input-group mb-4">
        <input type="text" class="form-control" placeholder="Search Passenger">
        <button class="btn btn-primary" type="button">Search</button>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-primary">
            <tr>
                <th>Serial No.</th>
                <th>Name</th>
                <th>Phone Number</th>
                <ht>Seat Number</ht>
                <th>Pickup Address</th>
                
                <th>Seat Numbers</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int count = 1;
                foreach (var passenger in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@passenger.Name</td>
                        <td>@passenger.PhoneNumber</td>
                        <td>@passenger.BoardingPoint</td>
                        
                        <td>@string.Join(", ", passenger.SeatNumbers)</td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No passengers found for this bus.</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

